<div class="container index-form">
  <h1>Users</h1>
  <table class="table">
    <thead class="thead-dark table-headers">
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Cohort</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody class="tb-cols">
          <% @users.each do |user| %>
            <tr>
              <td> <a href="/users/<%= user.user_id %>"> <%= user.first_name + ' ' + user.last_name %></a></td>
              <td> <%= user.email %></td>
              <td> <%= user.cohort_name %></td>
              <td> <%= user.role_name %></td>
            </tr>
          <% end %>
    </tbody>
  </table>
  <button class="btn btn-success btn-lg btn-block" type="button" onclick="window.location.href = 'users/new';" name="button">Add New User</button>
</div>

<div class="container show">
<h1><%= @role.role_name %></h1>

<div>
    <div>
      <button class="btn btn-secondary btn-lg btn-block" type="button" onclick="window.location.href = '/roles/<%= @role.role_id %>/edit';" name="button">Edit</button>
    </div>

    <div>
      <form class="d-none" id="delete-role" action="" method="POST">

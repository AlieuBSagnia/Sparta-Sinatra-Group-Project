<div class="container index-form">
  <h1>Roles</h1>
  <table class="table">
    <thead class="thead-dark table-headers">
      <tr>
        <th>Role Name</th>
      </tr>
    </thead>
    <tbody class="tb-cols">
          <% @roles.each do |role| %>
            <tr>
              <td> <a href="/roles/<%= role.role_id %>"><%= role.role_name %></a> </td>
            </tr>
          <% end %>
    </tbody>
  </table>
  <button class="btn btn-success btn-lg btn-block" type="button" onclick="window.location.href = 'roles/new';" name="button">Add New Role</button>
</div>

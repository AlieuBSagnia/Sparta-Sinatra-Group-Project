<div class="container">
  <div class="views-wrapper login-wrapper">
  <h1>Login</h1>
  <form form="form-inline" id="roles-form" action="/roles/1" method="POST">
  <div class="form-group row myForm">
    <div class="form-group form-inline">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <label class="control-label" id="testing" for="roleForm"><h4>Email</h4></label>
            <input class ="login-bar" type="text" name="" placeholder="Enter e-mail" id="emailValidate" pattern="[a-z0-9._%+-]+@spartaglobal.com$" required>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group form-inline">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <label class="control-label" id="testing" for="roleForm"><h4>Password</h4></label>
            <input class ="login-bar" type="password" name="" placeholder="enter password" id="passwordValidate" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,15}" required>
          </div>
        </div>
        <div id="loginError" class="message1 col-lg-12 text-center hidden">
          <p >Your email or Password is the wrong format </p>
        </div>
        <div class="message2 col-lg-12 text-center">
          <!-- <p>Password must have one capital letter, one number and must be between 8 and 15 characters long</p> -->
        </div>
      </div>
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group row myForm">
      <div class="col-md-12 col-sm-12 col-xs-12 text-center">
        <button class="btn btn-default btn-lg" type="submit" name="button" form="role-form" id="loginButton" >Log in</button>
      </div>
    </div>
  </form>
  </div>
  </div>

<div class="container">
  <form class="form-horizontal" action="/cohorts/<%= @cohort.cohort_id %>" method="post">
    <div class="form-group">
      <label class="col-xs-4 control-label"><h5>Cohort Name</h5></label>
      <div class="col-xs-4">
        <input type="text" class="form-control input-lg" name="cohort_name" placeholder="Enter Cohort Name" value="<%= @cohort.cohort_name %>" required>
      </div>
    </div>


  <div class="form-group">
    <label class="col-xs-4 control-label"><h5>Specialisation</h5></label>
    <div class="col-xs-4">
      <select name="spec_id" class="form-control input-lg">
        <option>Choose A Specialisation</option>
        <% @specs.each do |spec| %>
          <div>
            <option name="spec_id" value="<%= spec.spec_id %>"><%= spec.spec_name %></option>
          </div>
        <% end %>
      </select>
    </div>
  </div>

    <div class="form-group">
      <button type="submit" class="btn btn-default btn-lg btn-block delete-button" value="Save Cohort">Save cohort</button>
      <% if (@cohort.cohort_id) %>
        <input type="hidden" name="_method" value="PUT">
    <% end %>
    </div>
  </form>
</div>

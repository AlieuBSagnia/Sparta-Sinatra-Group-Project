<form action="/users/<%= @user.user_id %>" method="post">
    <div>
        <label>First Name: </label>
        <input type="text" name="first_name" placeholder="Enter First Name" value="<%= @user.first_name %>">
    </div>
    <div>
        <label>Last Name: </label>
        <input type="text" name="last_name" placeholder="Enter Last Name" value="<%= @user.last_name %>">
    </div>
    <div>
        <label>Email Address</label>
        <input type="text" name="email" placeholder="Enter Email Address" title="Email address must end in @spartaglobal.com" value="<%= @user.email %>" id="emailValidate" pattern="[a-z0-9._%+-]+@spartaglobal.com$" required>
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" placeholder="Enter Password" title="Password must have at least one uppercase letter, one lowercase letter, one number and be between 8 and 15 characters long" value="<%= @user.password %>" id="passwordValidate" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,15}" required>
    </div>
    <div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <label class="control-label" id="testing" for="roleForm"><h4>Cohort: </h4></label>
            <select name="cohort_id" class="custom-select" >
              <% @cohorts.each do |cohort| %>
                <div>
                  <option name="cohort_id" value="<%= cohort.cohort_id %>"><%= cohort.cohort_name %></option>
                </div>
              <% end %>
          </select>
        </div>
      </div>
    </div>
    <div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
         <label class="control-label" id="testing" for="roleForm"><h4>Role: </h4></label>
           <select name="role_id" class="custom-select">
             <% @roles.each do |role| %>
               <div>
                 <option name="role_id" value="<%= role.role_id %>"><%= role.role_name %></option>
               </div>
             <% end %>
           </select>
         </div>
      </div>
      <div>
        <label class="message">Your email or Password is incorrect</label>
      </div>
    </div>
    <div class="userSave">
      <input type="submit" value="Save User">
    </div>
    <% if (@user.user_id) %>
        <input type="hidden" name="_method" value="PUT">
    <% end %>
</form>

<script src="/js/main.js"></script>
<form action="/users/<%= @user.user_id %>" method="post">
    <div>
        <h1 class="new-header">First Name</h1>
        <input type="text" name="first_name" placeholder="Enter First Name" value="<%= @user.first_name %>">
    </div>
    <div>
        <label>Last Name</label>
        <input type="text" name="last_name" placeholder="Enter Last Name" value="<%= @user.last_name %>">
    </div>
    <div>
        <label>Email Address</label>
        <input type="text" name="email" placeholder="Enter Email Address" value="<%= @user.email %>">
    </div>
    <div>
        <label>Password</label>
        <input type="text" name="password" placeholder="Enter Password" value="<%= @user.password %>">
    </div>
    <div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <label class="control-label" id="testing" for="roleForm"><h4>Cohort</h4></label>
            <select name="cohort_id" class="custom-select" >
              <% @cohorts.each do |cohort| %>
                <div>
                  <option name="cohort_id" value="<%= cohort.cohort_id %>"><%= cohort.cohort_name %></option>
                </div>
              <% end %>
          </select>
        </div>
      </div>
    </div>
    <div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
         <label class="control-label" id="testing" for="roleForm"><h4>Role</h4></label>
           <select name="role_id" class="custom-select">
             <% @roles.each do |role| %>
               <div>
                 <option name="role_id" value="<%= role.role_id %>"><%= role.role_name %></option>
               </div>
             <% end %>
           </select>
         </div>
      </div>
    </div>
    <div>
      <input type="submit" value="Save User">
    </div>
    <% if (@user.user_id) %>
        <input type="hidden" name="_method" value="PUT">
    <% end %>
</form>

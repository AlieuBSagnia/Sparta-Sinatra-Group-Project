<form action="/users/<%= @user.id %>" method="post">
    <div>
        <label>First Name</label>
        <input type="text" name="title" placeholder="Enter First Name">
        <div>
            <%= @user.firstName %>
        </div>
    </div>
    <div>
        <label>Last Name</label>
        <input type="text" name="body" placeholder="Enter Last Name">
        <div>
            <%= @user.lastName %>
        </div>
    </div>
    <div>
        <label>Email Address</label>
        <input type="text" name="email" placeholder="Enter Email Address">
        <div>
            <%= @user.email %>
        </div>
    </div>
    <div>
        <label>Password</label>
        <input type="text" name="password" placeholder="Enter Password">
        <div>
            <%= @user.password %>
        </div>
    </div>
    <div>
        <label>Cohort</label>
        <input type="text" name="cohortName" placeholder="Enter Cohort">
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Cohort Name
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <% @cohorts.each do |cohort| %>
            <div>
              <li><%= "#{cohort.cohortName}" %></li>
            </div>
          <% end %>
          </ul>
        </div>
    </div>
    <div>
        <label>Role</label>
        <input type="text" name="roleName" placeholder="Enter Role">
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Role Name
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <% @roles.each do |role| %>
            <div>
              <li><%= "#{role.roleName}" %></li>
            </div>
          <% end %>
          </ul>
        </div>
    </div>
    <div>
        <input type="submit" value="Save User">
    </div>
    <% if (@user.id) %>
        <input type="hidden" name="_method" value="PUT">
    <% end %>
</form>

<form action="/specs/<%= @spec.id %>" method="post">
    <div>
        <label>Specialisation</label>
        <input type="text" name="spec_name" placeholder="Enter the Specialisation" value="<%= @spec.spec_name %>">
        <div>
            <%= @spec.spec_name %>
        </div>
    </div>
    <div>
        <input type="submit" value="Save Specialisation">
    </div>
    <% if (@spec.id) %>
        <input type="hidden" name="_method" value="PUT">
    <% end %>
</form>
